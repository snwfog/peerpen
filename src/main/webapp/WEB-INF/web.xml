<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">

    <welcome-file-list>
        <welcome-file>/view/index.jsp</welcome-file>
    </welcome-file-list>


    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/view/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login.do</servlet-name>
        <servlet-class>com.peerpen.controller.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login.do</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout.do</servlet-name>
        <servlet-class>com.peerpen.controller.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout.do</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/view/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register.do</servlet-name>
        <servlet-class>com.peerpen.controller.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register.do</servlet-name>
        <url-pattern>/register.do</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>profile</servlet-name>
        <jsp-file>/view/profile.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>profile.do</servlet-name>
        <servlet-class>com.peerpen.controller.Profile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>profile.do</servlet-name>
        <url-pattern>/profile.do</url-pattern>
    </servlet-mapping>




    <servlet>
        <servlet-name>error</servlet-name>
        <jsp-file>/view/error.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>



    <filter>
        <filter-name>noCacheFilter</filter-name>
        <filter-class>com.peerpen.controller.NoCacheFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>noCacheFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>



    <servlet>
        <servlet-name>hunk</servlet-name>
        <jsp-file>/view/test_hunk.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>hunk</servlet-name>
        <url-pattern>/hunk</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>hunk.do</servlet-name>
        <servlet-class>com.peerpen.controller.HunkTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>hunk.do</servlet-name>
        <url-pattern>/hunk.do</url-pattern>
    </servlet-mapping>


    <session-config>
        <session-timeout>72</session-timeout>
    </session-config>

</web-app>